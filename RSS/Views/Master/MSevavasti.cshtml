                    }

                }
                if (TValidate) {
                    if ($("#txtSevavasti").val() == "") {
                        toastr.error("Please Enter SevaVasti");
                        $("#txtSevavasti").focus();
                        TValidate = false;
                    }

                }

                if (TValidate) {

                    $.ajax({
                        type: "POST",
                        url: "/Master/InsertSevaVasti",
