</form>
    @section scripts
{
        <script type="text/javascript">
            $(document).ready(function () {
                var $VastiSelect;
                $("a").filter(".nav-link active").removeClass("nav-link active");
                $("#motobhag").addClass("nav-link active");
                $("#Master").addClass("nav-link active");
